<%= simple_form_for(@comment) do |f| %>
  <%= f.error_notification %>
  <%= params[:post_id] %>
  <div class="form-inputs">
    <%= f.input :post_id, :as => :hidden, :input_html => { :value => params[:post_id] } %>
    <%= f.input :body %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

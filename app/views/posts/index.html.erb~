<h1>Post Stream</h1>

<% @posts.each do |post| %>
  <div>
    <%= post.body %><br/>
    <%= link_to( "#{post.comments.count} comments", post) %>
    <% if post.user_id == current_user.id %>
      <%= link_to 'edit', edit_post_path(post) %>
      <%= link_to 'delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>
  <br/>
<% end %>

<br />

<%= link_to 'New Post', new_post_path %>
